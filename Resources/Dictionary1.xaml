<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- кнопки манипуляции окном (свернуть развернуть закрыть) -->
    <Style TargetType="Border" x:Key="borderHead">
        <Style.Setters>
            <Setter Property="Button.FontFamily" Value="Verdana"/>
            <Setter Property="Width" Value="47"/>
            <Setter Property="Height" Value="29"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style.Setters>
    </Style>
    <!-- значки кнопок манипуляции окном (свернуть развернуть закрыть) -->
    <Style TargetType="Label" x:Key="labelHead">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,2,0,0" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
        <!--<Setter Property="Foreground" Value="White"/>-->
    </Style>
    <!-- заголовок шапки окна -->
    <Style TargetType="Label" x:Key="labelTitleHead">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Height" Value="29" />
        <Setter Property="Margin" Value="2,4,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
        <!--<Setter Property="Foreground" Value="White"/>-->
    </Style>
    <!--<Style TargetType="TextBox" x:Key="textBoxTitleHead">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Height" Value="29" />
        <Setter Property="Margin" Value="2,4,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
        --><!--<Setter Property="Foreground" Value="White"/>--><!--
    </Style>-->
    <!-- размещение иконки шапки окна -->
    <Style TargetType="Border" x:Key="borderIconHead">
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="29" />
        <Setter Property="Margin" Value="3,0" />
    </Style>
    <!-- кнопка Ок в диалоговых окнах -->
    <Style TargetType="Button" x:Key="buttonDialogs" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Button.FontFamily" Value="Verdana" />
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="12" />
        <!--<Setter Property="Foreground" Value="White" />-->
    </Style>
    <!-- кнопка Отмена в диалоговых окнах -->
    <Style TargetType="Button" x:Key="buttonDialogsFlat" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Button.FontFamily" Value="Verdana" />
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <!-- информационный текст TextBox в диалоговых окнах -->
    <Style TargetType="TextBox" x:Key="textBoxDialogs" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    <!-- информационный текст в диалоговых окнах -->
    <Style x:Key="textDialogs">
        <Setter Property="TextElement.FontFamily" Value="Verdana"/>
        <Setter Property="TextElement.FontSize" Value="14"/>
    </Style>
    <!-- шаблонный текст в диалоговых окнах -->
    <Style x:Key="textPatternDialogs">
        <Setter Property="TextElement.FontFamily" Value="Yu Gothic UI"/>
        <Setter Property="TextElement.Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
        <Setter Property="TextElement.FontWeight" Value="Medium"/>
        <Setter Property="TextElement.FontSize" Value="15"/>
    </Style>
</ResourceDictionary>